{
	"name": "api.taknepoidet.xyz",
	"version": "1.0.0",
	"description": "Api сайта taknepoidet.xyz",
	"main": "app/index.js",
	"type": "module",
	"scripts": {
		"init": "git config core.hooksPath ./.hooks",
		"build": "rimraf app && cross-env NODE_ENV=productio rollup -c",
		"watch": "rollup -c -w",
		"lint": "eslint --fix ./src ./test",
		"prettier": "prettier --ignore-unknown --write .",
		"beautifier": "npm run lint && npm run prettier",
		"server:dev": "npx nodemon -e js --watch app app/api.js",
		"dev": "npx concurrently \"npm run wyatch\" \"npm run server:dev\"",
		"test": "jest --updateSnapshot --colors",
		"test:coverage": "npm run test -- --coverage --onlyChanged"
	},
	"author": "Yakin Nikita <mail@taknepoidet.ru>",
	"license": "ISC",
	"dependencies": {
		"console-commander": "^2.1.0",
		"dotenv": "^16.0.0",
		"fastify": "^3.27.1",
		"fastify-route-group": "^1.0.2",
		"find-up": "^6.2.0",
		"mime-types": "^2.1.34",
		"sharp": "^0.30.0",
		"yaml": "^1.10.2"
	},
	"devDependencies": {
		"@babel/core": "^7.17.0",
		"@babel/preset-env": "^7.16.11",
		"@babel/preset-typescript": "^7.16.7",
		"@rollup/plugin-commonjs": "^21.0.1",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.1.3",
		"@rollup/plugin-replace": "^3.0.1",
		"@rollup/plugin-typescript": "^8.3.0",
		"@taknepoidet-config/eslint-config": "^1.8.1",
		"@taknepoidet-config/prettier": "^1.7.0",
		"@types/crypto-js": "^4.1.0",
		"@types/find-up": "^4.0.0",
		"@types/jest": "^27.4.0",
		"@types/sharp": "^0.29.5",
		"@types/workerpool": "^6.1.0",
		"@types/yaml": "^1.9.7",
		"cross-env": "^7.0.3",
		"eslint": "8.8.0",
		"eslint-plugin-jest": "^26.0.0",
		"jest": "^27.5.0",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"rollup": "^2.67.0",
		"rollup-plugin-license": "^2.6.1",
		"rollup-plugin-terser": "^7.0.2",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.5",
		"@typescript-eslint/eslint-plugin": "^5.10.2"
	},
	"lint-staged": {
		"{src,test}/**/*.ts": "eslint"
	}
}
