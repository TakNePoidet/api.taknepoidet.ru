{
	"compilerOptions": {
		"module": "es2020",
		"target": "ESNext",
		"sourceMap": true,
		"allowJs": false,
		"declaration": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"rootDir": "./src",
		"baseUrl": ".",
		"outDir": "./app"
	},
	"include": ["./src/", "test", "example"],
	"exclude": ["dist"]
}
