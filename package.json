{
	"name": "api.taknepoidet.xyz",
	"version": "1.0.0",
	"description": "Api сайта taknepoidet.xyz",
	"main": "app/api.js",
	"type": "module",
	"scripts": {
		"init": "git config core.hooksPath ./.hooks",
		"build": "rimraf app && cross-env NODE_ENV=productio rollup -c",
		"watch": "rollup -c -w",
		"lint": "eslint --fix ./src",
		"prettier": "prettier --ignore-unknown --write .",
		"beautifier": "npm run lint && npm run prettier",
		"server:dev": "nodemon -e js --watch app app/api.js",
		"dev": "concurrently \"npm run watch\" \"npm run server:dev\""
	},
	"author": "Yakin Nikita <mail@taknepoidet.xyz>",
	"license": "ISC",
	"dependencies": {
		"@textlint/ast-node-types": "^12.1.0",
		"@textlint/markdown-to-ast": "^12.1.0",
		"console-commander": "^2.1.0",
		"dotenv": "^16.0.0",
		"fastify": "^3.27.1",
		"fastify-route-group": "^1.0.2",
		"find-up": "^6.3.0",
		"mime-types": "^2.1.34",
		"sharp": "^0.30.1",
		"yaml": "^1.10.2"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^21.0.1",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.1.3",
		"@rollup/plugin-replace": "^3.0.1",
		"@rollup/plugin-typescript": "^8.3.0",
		"@taknepoidet-config/eslint-config": "^1.8.1",
		"@taknepoidet-config/prettier": "^1.7.0",
		"@types/find-up": "^4.0.0",
		"@types/mime-types": "^2.1.1",
		"@types/sharp": "^0.29.5",
		"@types/yaml": "^1.9.7",
		"@typescript-eslint/eslint-plugin": "^5.11.0",
		"concurrently": "^7.0.0",
		"cross-env": "^7.0.3",
		"eslint": "8.8.0",
		"nodemon": "^2.0.15",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"rollup": "^2.67.2",
		"rollup-plugin-license": "^2.6.1",
		"rollup-plugin-terser": "^7.0.2",
		"ts-node": "^10.5.0",
		"typescript": "^4.5.5"
	},
	"lint-staged": {
		"{src,test}/**/*.ts": "eslint"
	}
}
